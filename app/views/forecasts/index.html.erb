<p style="color: green"><%= notice %></p>

<p class="font-bold text-slate-200 text-4xl pb-10">Weather Forecast App</p>

<div class="pb-10">
  <%= link_to "Get Forecast", new_forecast_path, class: 'text-slate-200 text-xl' %>
</div>

<p class="font-semibold text-slate-200 text-3xl underline">Recent Forecasts</p>

<div id="forecasts">
  <% @forecasts.each do |forecast| %>
    <%= render forecast %>
    <p>
      <%= link_to "Show this forecast", forecast %>
    </p>
  <% end %>
</div>

