  <%= link_to "Back to forecasts", forecasts_path, class: 'font-bold text-slate-200 text-xl transition duration-200 ease-in-out hover:text-gray-600' %>
</div>

<div class="flex justify-center">
  <div class="flex-col">
    <div>
      <%= render @forecast %>
    </div>
  </div>
</div>

<div>
  <%= button_to "Delete this forecast?", @forecast, method: :delete, class: "focus:outline-none text-white font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-red-700 hover:bg-red-800 focus:ring-red-900" %>
</div>